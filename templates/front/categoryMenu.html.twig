{% extends 'base.html.twig' %}

{% block title %}{{ category }} Menu{% endblock %}
{% block header %}Delicious Menu{% endblock %}
{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-7">
            <p class="lead">{{ category }} menu âœ…</p>
        </div>
    </div>
    <div class="col-md-12 text-center">
        <div class="tab-content text-left">
            <div class="tab-pane fade show active" id="pills-breakfast" role="tabpanel"
                 aria-labelledby="pills-breakfast-tab">

                {% for dish in dishes %}
                    <div class="media menu-item">
                        <img class="mr-3" src="{{ vich_uploader_asset(dish, 'imageFile') }}" class="img-fluid" alt="where?">
                        <div class="media-body">
                            <h5 class="mt-0">{{ dish.name }}</h5>
                            <p>Far far away, behind the word mountains, far from the countries Vokalia and
                                Consonantia, there live the blind texts.</p>
                            <h6 class="text-primary menu-price">{{ dish.price }}</h6>
                        </div>
                        <p class="mb-0"><a href="{{ path('addToCart', { id: dish.id }) }}"
                                           class="btn btn-primary btn-sm">Add</a></p>
                    </div>
                {% endfor %}

            </div>
        </div>
    </div>



{% endblock %}