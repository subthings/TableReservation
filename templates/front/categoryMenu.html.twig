{% extends 'base.html.twig' %}

{% block title %}{{ category }} Menu{% endblock %}

{% block body %}
    <section class="site-section" id="section-menu">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center mb-5 site-animate">
                    <h2 class="display-4">Delicious Menu</h2>
                    <div class="row justify-content-center">
                        <div class="col-md-7">
                            <p class="lead">{{category}} menu âœ…</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 text-center">
                    <div class="tab-content text-left">
                        <div class="tab-pane fade show active" id="pills-breakfast" role="tabpanel" aria-labelledby="pills-breakfast-tab">
                            <div class="row">
                                <div class="col-md-6 site-animate">
                                    {% for dish in dishes %}
                                    <div class="media menu-item">
                                        <img class="mr-3" src="{{dish.imageFile}}" class="img-fluid" alt="where?">
                                        <div class="media-body">
                                            <h5 class="mt-0">{{ dish.name }}</h5>
                                            <p>Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts.</p>
                                            <h6 class="text-primary menu-price">{{ dish.price }}</h6>
                                        </div>
                                    </div>
                                    {% endfor %}
                                    </div>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


{% endblock %}