{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}


{% block header %}Your cart, {{ cart.user }}{% endblock %}
{% block body %}
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">Position</th>
            <th scope="col">Price</th>
            <th scope="col">Number</th>
            <th scope="col">Sum</th>
            <th scope="col">Delete</th>
        </tr>
        </thead>
        <tbody>

        {% for orderRow in orderRows %}
            <tr>
                <th scope="col">{{ orderRow.dish }}</th>
                <td>Price</td>
                <td>{{ orderRow.quantity }}</td>
                <td>price</td>
                <td>Delete</td>
            </tr>
        {% endfor %}

        </tbody>
    </table>
    <h4>Total price: {{ totalSum }}</h4>
    <a type="submit" class="btn btn-warning" href="{{ path('order', { id: cart.id }) }}">Order</a>

{% endblock %}
